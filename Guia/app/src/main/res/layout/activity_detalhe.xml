<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Primeira imagem do local -->
        <ImageView
            android:id="@+id/imageViewDetail1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zoologico" /> <!-- Valor default, será alterado no Java -->

        <!-- Segunda imagem do local -->
        <ImageView
            android:id="@+id/imageViewDetail2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/zoologico2" /> <!-- Valor default, será alterado no Java -->


        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do Zoológico"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Botão Ver no Mapa -->
        <Button
            android:id="@+id/buttonMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver no Mapa"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

        <!-- Botão Abrir Site -->
        <Button
            android:id="@+id/buttonWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir Site"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

        <!-- Botão Telefonar -->
        <Button
            android:id="@+id/buttonCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefonar"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>
